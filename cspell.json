{
    "version": "0.2",
    "language": "en,ru",
    "dictionaries": ["cspell-custom-words"],
    "import": ["@cspell/dict-ru_ru/cspell-ext.json"],
    "dictionaryDefinitions": [
        {
            "name": "cspell-custom-words",
            "path": "./cspell-custom-words.txt",
            "addWords": true
        }
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            "caseSensitive": false
        }
    ],
    "ignorePaths": [
        ".*",
        "build",
        "node_modules",
        "src",
        "vale",
        "static",
        "package.json",
        "docusaurus.config.js",
        "sidebars.js",
        "babel.config.js",
        "cspell-custom-words.txt"
    ]
}
